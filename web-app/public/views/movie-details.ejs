<!DOCTYPE html>

<html lan="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>movie-watch</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
			crossorigin="anonymous"
		></script>
		<link rel="stylesheet" href="../css/result_index.css" />
		<link rel="stylesheet" href="../css/results_content.css" />
		<link rel="stylesheet" href="../css/movie_info.css" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
			integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Navbar</a>
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#navbarSupportedContent"
					aria-controls="navbarSupportedContent"
					aria-expanded="false"
					aria-label="Toggle navigation"
				>
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="#"
								>Recommendations</a
							>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/genres">Genre</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">OTT</a>
						</li>
					</ul>
					<svg
						id="theme"
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
					>
						<title>weather-night</title>
						<path
							d="M17.75,4.09L15.22,6.03L16.13,9.09L13.5,7.28L10.87,9.09L11.78,6.03L9.25,4.09L12.44,4L13.5,1L14.56,4L17.75,4.09M21.25,11L19.61,12.25L20.2,14.23L18.5,13.06L16.8,14.23L17.39,12.25L15.75,11L17.81,10.95L18.5,9L19.19,10.95L21.25,11M18.97,15.95C19.8,15.87 20.69,17.05 20.16,17.8C19.84,18.25 19.5,18.67 19.08,19.07C15.17,23 8.84,23 4.94,19.07C1.03,15.17 1.03,8.83 4.94,4.93C5.34,4.53 5.76,4.17 6.21,3.85C6.96,3.32 8.14,4.21 8.06,5.04C7.79,7.9 8.75,10.87 10.95,13.06C13.14,15.26 16.1,16.22 18.97,15.95M17.33,17.97C14.5,17.81 11.7,16.64 9.53,14.5C7.36,12.31 6.2,9.5 6.04,6.68C3.23,9.82 3.34,14.64 6.35,17.66C9.37,20.67 14.19,20.78 17.33,17.97Z"
						/>
					</svg>
					<form class="d-flex" role="search">
						<input
							id="searchInput"
							class="form-control me-2"
							type="search"
							placeholder="Search"
							aria-label="Search"
						/>
						<button
							id="searchButton"
							class="btn btn-outline-success"
							type="submit"
						>
							Search
						</button>
					</form>
				</div>
			</div>
		</nav>

		<div class="main">
			<div class="movie-details">
				<img
					src="<%= movieDetails.Poster %>"
					alt="<%= movieDetails.PosterAlt %>"
				/>
				<h2><%= movieDetails.Title %></h2>
				<p><%= movieDetails.Plot %></p>
				<p>Directed by: <%= movieDetails.Director %></p>
				<p>Written by: <%= movieDetails.Writer %></p>
				<p>Starring: <%= movieDetails.Actors %></p>
				<p>IMDb Rating: <%= movieDetails.IMDBRating %></p>
				<p>Rotten Tomatoes Rating: <%= movieDetails.RottenTomatoesRating %></p>

				<div class="streaming-service">
					<img
						src="<%= movieDetails.StreamingService[0].LogoPath %>"
						alt="<%= movieDetails.StreamingService[0].StreamingService %> logo"
					/>
					<p>
						Available on: <%= movieDetails.StreamingService[0].StreamingService
						%>
					</p>
				</div>

				<div class="poster-details-container"></div>

				<div class="review container">
					<div
						id="reviewCarousel"
						class="carousel slide"
						data-bs-ride="carousel"
					>
						<div class="carousel-inner">
							<% let reviews = movieDetails.Reviews; if(reviews.length > 0) {
							reviews.forEach((review, index) => { let content = review.content;
							if(content.length > 800) { content = content.substring(0, 800) +
							'...'; } %>

							<div class="carousel-item <%= index === 0 ? 'active' : '' %>">
								<div class="card">
									<div class="card-body">
										<h5 class="card-title"><%= review.author %></h5>
										<p class="card-text"><%= content %></p>
										<div class="text-center">
											<a href="<%= review.url %>" class="btn btn-primary"
												>Read Full Review</a
											>
										</div>
									</div>
								</div>
							</div>

							<% }); } else { %>
							<p>No reviews available.</p>
							<% } %>
						</div>

						<!-- Buttons below the carousel -->
						<div class="carousel-buttons d-flex justify-content-center py-3">
							<button
								class="btn btn-secondary"
								type="button"
								data-bs-target="#reviewCarousel"
								data-bs-slide="prev"
							>
								<span class="carousel-button-icon" aria-hidden="true"
									>&lt;</span
								>
							</button>
							<div class="px-2"></div>
							<button
								class="btn btn-secondary"
								type="button"
								data-bs-target="#reviewCarousel"
								data-bs-slide="next"
							>
								<span class="carousel-button-icon" aria-hidden="true"
									>&gt;</span
								>
							</button>
						</div>
					</div>
				</div>

				<div class="keyword-container">
					<div class="keywords">
						<h3>Keywords:</h3>
						<ul class="keyword-list">
							<% movieDetails.Keywords.forEach(keyword => { %>
							<li><%= keyword %></li>
							<% }); %>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<script>
			document.getElementById("theme").addEventListener("click", () => {
				document.body.classList.toggle("dark_theme");
			});

			document
				.querySelector(".btn.btn-outline-success")
				.addEventListener("click", async function () {
					const searchQuery = document.getElementById("searchInput").value;

					// If the search bar is empty, do nothing
					if (!searchQuery.trim()) {
						return;
					}

					try {
						const response = await fetch("/search", {
							method: "POST",
							headers: {
								"Content-Type": "application/json",
							},
							body: JSON.stringify({ query: searchQuery }),
						});

						const { searchId } = await response.json();

						window.location.href = `/results?searchId=${searchId}`;
					} catch (error) {
						console.error("Error:", error);
					}
				});
		</script>
	</body>
</html>
