		<div class="main">
			<div class="formDiv">
				<form id="recommendationForm">
					<label for="movieName1">Movie Name 1:</label>
					<input type="text" id="movieName1" name="movieName1" required />

					<label for="movieName2">Movie Name 2:</label>
					<input type="text" id="movieName2" name="movieName2" required />

					<label for="movieName3">Movie Name 3:</label>
					<input type="text" id="movieName3" name="movieName3" required />

					<label for="movieName4">Movie Name 4:</label>
					<input type="text" id="movieName4" name="movieName4" required />

					<label for="keywords1">Keywords 1:</label>
					<input type="text" id="keywords1" name="keywords1" required />

					<label for="keywords2">Keywords 2:</label>
					<input type="text" id="keywords2" name="keywords2" required />

					<button type="button" class="btn btn-secondary btn-lg" onclick="submitRecommendationForm() ; disable()">Get Reccomendations</button>

				</form>
			</div>
			<br />
			<div
				class="content-container"
				id="resultsContainer"
				style="display: none"
			>
				<h1>Results</h1>
				<div class="movie-cards-container" id="movieCardsContainer">
					<!-- Five initial hidden movie cards -->
					<div class="movie-cards" style="display: none"></div>
					<div class="movie-cards" style="display: none"></div>
					<div class="movie-cards" style="display: none"></div>
					<div class="movie-cards" style="display: none"></div>
					<div class="movie-cards" style="display: none"></div>
				</div>
			</div>
		</div>
		<script>
			document.getElementById("theme").addEventListener("click", () => {
				document.body.classList.toggle("dark_theme");
			});
			
			function disable( ){
				document.querySelector( ".btn.btn-secondary.btn-lg").innerHTML = "Loading .." ;
				document.querySelector( ".btn.btn-secondary.btn-lg").disabled = true ;
			}
			async function submitRecommendationForm() {
				try {
					const form = document.getElementById("recommendationForm");
					
					const formData = new FormData(form);

					const jsonObject = {};
					formData.forEach((value, key) => {
						jsonObject[key] = value;
					});

					const response = await fetch("/getrecommendations", {
						method: "POST",
						headers: {
							"Content-Type": "application/json",
						},
						body: JSON.stringify(jsonObject),
					});

					const { movieDetails, searchId } = await response.json();

					console.log("Movie Details:", movieDetails);
					console.log("Search ID:", searchId);

					window.location.href = `/results?searchId=${searchId}`;
				} catch (error) {
					console.error("Error:", error);
				}
			}
		</script>
